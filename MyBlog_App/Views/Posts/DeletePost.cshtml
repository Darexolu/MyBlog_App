@model PostViewModel

<h2>Delete Post</h2>

<p>Are you sure you want to delete this post?</p>

<div>
    <strong>Title:</strong> @Model.Post.Title
</div>
<div>
    <strong>Body:</strong> @Model.Post.Body
</div>

<form asp-action="Delete" asp-route-id="@Model.Post.Id" method="post">
     @Html.AntiForgeryToken() 
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>

<p><a asp-action="Index">Back to Posts</a></p>
